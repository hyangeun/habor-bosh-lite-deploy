#!/usr/bin/env bash

set -e

[ -z "$DEBUG" ] || set -x

WORKSPACE="$(cd "$(dirname "${BASH_SOURCE[0]}")/../../" && pwd)" #taken from https://github.com/cloudfoundry/bosh-lite/blob/master/bin/provision_cf#L7

BOSH_CLI="${BOSH_CLI:-bosh -e bosh-lite}"


export BOSH_ENVIRONMENT="${BOSH_ENVIRONMENT:-https://10.20.1.30:25555}"
export BOSH_NON_INTERACTIVE="${BOSH_NON_INTERACTIVE:-false}"
export BOSH_CLIENT="${BOSH_CLIENT:-admin}"
export BOSH_CLIENT_SECRET="${BOSH_CLIENT_SECRET:-zw1e958gbj26bziolp01}"
export BOSH_CA_CERT="${BOSH_CA_CERT:-"$(bosh int ~/workspace/bosh/creds.yml --path /director_ssl/ca)"}"
export BOSH_DEPLOYMENT="${BOSH_DEPLOYMENT:-cf-rabbitmq-multitenant-broker}"

main() {
  local manifest
  manifest=$(interpolate-manifest-for-bosh-lite)

  upload_stemcell "$manifest"

  download_blobs
  update_src_dependencies

  create_dev_release && upload_dev_release

  deploy "$manifest"
  register_multitenant_broker
  run_smoke_tests
}

interpolate-manifest-for-bosh-lite() {
  local manifest
  manifest=$(mktemp)

  "$WORKSPACE/cf-rabbitmq-multitenant-broker-release/scripts/interpolate-manifest-for-bosh-lite" "$manifest"
}

upload_stemcell() {
  local manifest="$1"
  BOSH_STEMCELL_NAME="${BOSH_STEMCELL:-bosh-warden-boshlite-ubuntu-trusty-go_agent}"
  BOSH_STEMCELL_VERSION="$(yq .stemcells[0].version "$manifest")"
  BOSH_STEMCELL_URL="https://bosh.io/d/stemcells/$BOSH_STEMCELL_NAME?v=$BOSH_STEMCELL_VERSION"

  $BOSH_CLI upload-stemcell "$BOSH_STEMCELL_URL" --name "$BOSH_STEMCELL_NAME" --version "$BOSH_STEMCELL_VERSION"
}

download_blobs() {
  $BOSH_CLI sync-blobs
}

update_src_dependencies() {
  git submodule update --init --recursive
}

create_dev_release() {
  $BOSH_CLI create-release --force
}

upload_dev_release() {
  $BOSH_CLI upload-release
}

update_cloud_config() {
  $BOSH_CLI update-cloud-config "$BOSH_CLOUD_CONFIG"
}

deploy() {
  local manifest="$1"
  $BOSH_CLI deploy --no-redact "$manifest"
}

register_multitenant_broker() {
  $BOSH_CLI run-errand broker-registrar
}

run_smoke_tests() {
  $BOSH_CLI run-errand smoke-tests
}

main
